using Gtk 4.0;
using Adw 1;

Box content_box {
  orientation: vertical;
  spacing: 25;

  Adw.PreferencesGroup {
    margin-top: 12;

    Adw.ComboRow power_button_comborow {
      title: _("Power Button Behavior");
      model: StringList { strings [_("Do Nothing"), _("Suspend"), _("Hibernate"), _("Ask")] };

    }

    Adw.ActionRow {
      title: _("Dim Screen");
      subtitle: _("Reduces the screen brightness when the computer is inactive.");
      activatable-widget: dim_screen_switch;

      Switch dim_screen_switch {
        valign: center;
      }
    }

    Adw.ActionRow {
      title: _("Automatic Power Saver");
      subtitle: _("Enables power saver mode when battery is low.");
      activatable-widget: auto_power_saver_switch;

      Switch auto_power_saver_switch {
        valign: center;
      }
    }

    Adw.ExpanderRow {
      title: _("Screen Blank");
      subtitle: _("Whether to turn the screen off after a period of inactivity.");
      expanded: bind screen_blank_switch.active bidirectional;

      [action]
      Switch screen_blank_switch {
        valign: center;
      }

      Adw.ActionRow {
        title: _("Delay");
        subtitle: _("Time in minutes after which screen will turn off.");

        SpinButton screen_blank_delay_spinbutton {
          width-chars: 2;
          valign: center;

          adjustment: Adjustment {
            lower: 1;
            value: 1;
            upper: 1440;
            step-increment: 1;
          };
        }
      }
    }
  }

  Adw.PreferencesGroup {
    title: _("Automatic Suspend");
    description: _("Pauses the computer after a period of inactivity.");

    Adw.ExpanderRow {
      title: _("On Battery Power");
      expanded: bind auto_suspend_battery_switch.active bidirectional;

      [action]
      Switch auto_suspend_battery_switch {
        valign: center;
      }

      Adw.ActionRow {
        title: _("Delay");
        subtitle: _("Time in minutes after which the computer will suspend.");

        SpinButton suspend_battery_delay_spinbutton {
          width-chars: 2;
          valign: center;

          adjustment: Adjustment {
            lower: 1;
            value: 1;
            upper: 1440;
            step-increment: 1;
          };
        }
      }
    }

    Adw.ExpanderRow {
      title: _("When Plugged In");
      expanded: bind auto_suspend_ac_switch.active bidirectional;

      [action]
      Switch auto_suspend_ac_switch {
        valign: center;
      }

      Adw.ActionRow {
        title: _("Delay");
        subtitle: _("Time in minutes after which the computer will suspend.");

        SpinButton suspend_ac_delay_spinbutton {
          width-chars: 2;
          valign: center;

          adjustment: Adjustment {
            lower: 1;
            value: 1;
            upper: 1440;
            step-increment: 1;
          };
        }
      }
    }
  }
}
